<ul class="sidebar-tab-ul">
  <% Post.order('monthly_view_count DESC').first(3).each do |post|  %>
    <li>
      <a href="<%= post_path(post) %>">
        <%= image_tag post.pic_thumbnail_url, alt: post.picture_alt_text, title: post.picture_alt_text, class: 'tab-post-pic' %>
        <%= content_tag :span, truncate(post.title, length: 38, omission: '..'), class: 'tab-post-title' %>
        <%= content_tag :i, "#{post.monthly_view_count} views this month", class: 'tab-post-view-count' %>
      </a>
    </li>
  <% end %>
</ul>
